<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/reply_send_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/message_reply_margin_bottom"
    android:background="@drawable/reply_background"
    android:padding="@dimen/message_padding"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="TextView"
            android:textSize="@dimen/message_text_size"
            android:textColor="#000833"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/messag"
            style="@style/chat_text_message_style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:autoLink="web"
            android:textSize="@dimen/message_text_size"
            android:paddingRight="6dp"
            android:text="."
            android:textColor="#ccffffff" />

        <TextView
            android:id="@+id/reply_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test view here"
            android:textColor="#A3A3A3" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/container"
        android:id="@+id/thumbnail"
        android:contentDescription="@string/image_reply_thumbnail" />

</RelativeLayout>
